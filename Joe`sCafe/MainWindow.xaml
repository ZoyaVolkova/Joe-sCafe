<Window x:Class="Joe_sCafe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Joe_sCafe"
        mc:Ignorable="d"
        Title="Welcome to Sloppy Joe`s Budget House o`Discount Sandwiches!" Height="350" Width="550">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="item1" FontSize="18"/>
        <TextBlock x:Name="price1" Grid.Column="1" HorizontalAlignment="Right"  FontSize="18"/>
        <TextBlock x:Name="item2" Grid.Row="1" FontSize="18"/>
        <TextBlock x:Name="price2" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" FontSize="18"/>
        <TextBlock x:Name="item3" Grid.Row="2" FontSize="18"/>
        <TextBlock x:Name="price3" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" FontSize="18"/>
        <TextBlock x:Name="item4" Grid.Row="3" FontSize="18"/>
        <TextBlock x:Name="price4" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right" FontSize="18"/>
        <TextBlock x:Name="item5" Grid.Row="4" FontSize="18"/>
        <TextBlock x:Name="price5" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Right" FontSize="18"/>
        <TextBlock x:Name="item6" Grid.Row="5" FontSize="18"/>
        <TextBlock x:Name="price6" Grid.Column="1" Grid.Row="5" HorizontalAlignment="Right" FontSize="18"/>
        <TextBlock x:Name="guacamole" HorizontalAlignment="Right" FontSize="18" VerticalAlignment="Bottom" FontStyle="Italic" Grid.Row="6" Grid.ColumnSpan="2"/>


    </Grid>
</Window>
